<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.1.0">
        <command>
            <action class="uni.wue.app.cli.SetCaptivePortalCommand"/>
            <completers>
                <ref component-id="hostIpCompleter"/>
            </completers>
        </command>
        <command>
            <action class="uni.wue.app.cli.GetCaptivePortalCommand"/>
        </command>
        <command>
            <action class="uni.wue.app.cli.RegisterConnectionCommand"/>
            <completers>
                <ref component-id="serviceIdCompleter"/>
                <ref component-id="hostIdCompleter"/>
            </completers>
        </command>
        <command>
            <action class="uni.wue.app.cli.RemoveConnectionCommand"/>
            <completers>
                <ref component-id="hostIdCompleter"/>
                <ref component-id="serviceIdCompleter"/>
            </completers>
        </command>
        <command>
            <action class="uni.wue.app.cli.ListConnectionsCommand"/>
        </command>
        <command>
            <action class="uni.wue.app.cli.ListServicesCommand"/>
        </command>
    </command-bundle>

    <bean id="hostIdCompleter" class="org.onosproject.cli.net.HostIdCompleter"/>
    <bean id="serviceIdCompleter" class="uni.wue.app.cli.completer.ServiceIdCompleter"/>
    <bean id="hostIpCompleter" class="uni.wue.app.cli.completer.HostIpv4Completer"/>
    <bean id="hostMacCompleter" class="uni.wue.app.cli.completer.HostMacCompleter"/>
    <bean id="devicePortNumberCompleter" class="uni.wue.app.cli.completer.DevicePortNumberCompleter"/>
    <bean id="deviceIdCompleter" class="org.onosproject.cli.net.DeviceIdCompleter"/>

</blueprint>
